@model IEnumerable<SchoolManagementSystem.BusinessLayer.Classes>

@{
    ViewData["Title"] = "Index";
}

<h1>Class List</h1>

<p>
    <a class="p_btn_3" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="p_btn_3" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="p_btn_3" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="p_btn_3" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
